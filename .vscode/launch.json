    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remix: Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/remix",
            "args": ["dev"],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--inspect"],
            "port": 5173,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
    ]
}